<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/colorTransparentItem"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/forecastItem_Day_WeatherIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".15"
            android:scaleType="fitCenter"
            android:contentDescription="@string/weather_icon"
            android:layout_marginStart="10dp"/>

        <TextView android:id="@+id/forecastItem_WeekDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/forecastItem_MaxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp" />

    <TextView android:id="@+id/forecastItem_MinTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@id/forecastItem_MaxTemp"
        android:alpha="0.5"
        android:textSize="18sp" />

</RelativeLayout>